<% if obj.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <%= pluralize(obj.errors.count, 'error') %>
    Prohibited this article from being saved:
    <ul>
      <% obj.errors.full_messages.each do |message| %>
        <li>
          <%= message %><br>
        </li>
        <% end %>
      </div>
    </ul>
<% end %>
