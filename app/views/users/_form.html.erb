<%= render 'shared/flash', obj: @user %>

<div class='row'>
  <div class='col-lg'>
    <%= form_for @user do |f| %>
      <div class='form-group'>
        <div class='control-label  col-sm-2'>
          <%= f.label :Username  %>
        </div>
        <div class='col-sm-8'>
          <%= f.text_field :username, class:"form-control",
           placeholder: "Enter username", autofocus: true %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-8'>
          <%= f.label :email  %>
        </div>
        <div class='col-sm-8'>
          <%= f.email_field :email, rows:10, class:'form-control',
          placeholder:'Enter your email address' %>
        </div>
      </div>
      <div class='form-group'>
        <div class='control-label col-sm-8'>
          <%= f.label :Password  %>
        </div>
        <div class='col-sm-8'>
          <%= f.password_field :password, rows:10, class:'form-control',
          placeholder:'Enter your Password' %>
        </div>
      </div>

      <div class='form-group'>
        <div class='col-offset-2 col-sm-10'>
          <%= f.submit(@user.new_record? ? "Sign Up" : "Update Account",
            class:'btn btn-primary btn-lg')  %>
        </div>
      </div>

    <% end %>
  </div>
</div>
